{
  "name": "@cap-js-community/sap-afc-sdk",
  "version": "0.2.0",
  "description": "SAP Advanced Financial Closing SDK for CDS",
  "homepage": "https://cap.cloud.sap/",
  "engines": {
    "node": ">=22"
  },
  "author": "Oliver Klemenz <oklemenz@gmail.com>, Maximilian Gruenfelder <max.grunfelder@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cap-js-community/sap-afc-sdk.git"
  },
  "keywords": [
    "AFC",
    "CAP",
    "CDS"
  ],
  "files": [
    "app",
    "bin",
    "db",
    "http",
    "openapi",
    "src",
    "srv",
    "test/data",
    "CHANGELOG.md",
    "cds-plugin.js",
    "config.json",
    "index.cds"
  ],
  "main": "index.js",
  "types": "index.d.ts",
  "bin": {
    "afc": "./bin/afc.js"
  },
  "scripts": {
    "start": "cds-serve",
    "watch": "cds watch",
    "test": "jest --silent",
    "test:update": "npm test -- -u",
    "lint": "npm run eslint && npm run prettier && npm run prettier:cds",
    "lint:ci": "npm run eslint:ci && npm run prettier:ci",
    "eslint": "eslint --fix .",
    "eslint:ci": "eslint .",
    "prettier": "prettier \"**/*.{js,json,md,yml,yaml}\" --write --log-level error",
    "prettier:ci": "prettier \"**/*.{js,json,md,yml,yaml}\" --check",
    "prettier:cds": "format-cds app db srv -f",
    "upgrade-lock": "rm -rf package-lock.json node_modules && npm i",
    "prepareRelease": "npm prune --production",
    "openapi": "npm run openapi:update && npm run lint",
    "openapi:update": "node scripts/openapi",
    "openapi:check": "node scripts/openapi -c",
    "audit": "npm audit --only=prod"
  },
  "dependencies": {
    "@cap-js-community/event-queue": "^1.9.0",
    "@cap-js-community/feature-toggle-library": "^1.2.5",
    "@cap-js-community/websocket": "^1.6.1",
    "@sap/cds-common-content": "^2.1.0",
    "@sap/sbf": "^6.8.2",
    "commander": "^13.1.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "http-status-codes": "^2.3.0",
    "openurl": "^1.1.1",
    "prompt-sync": "^4.2.0",
    "swagger-ui-express": "^5.0.1",
    "verror": "^1.10.1"
  },
  "devDependencies": {
    "@cap-js-community/sap-afc-sdk": "./",
    "@cap-js/cds-test": "^0.2.0",
    "@cap-js/sqlite": "^1.9.0",
    "@sap/cds": "^8.8.0",
    "@sap/cds-dk": "^8.8.0",
    "@sap/cds-lsp": "^8.8.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-n": "^17.16.2",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.3",
    "shelljs": "^0.8.5",
    "ws": "^8.18.1"
  },
  "cds": {
    "server": {
      "index": true
    },
    "i18n": {
      "folders": [
        "i18n",
        "_i18n",
        "/node_modules/@cap-js-community/sap-afc-sdk/srv/i18n",
        "/node_modules/@cap-js-community/sap-afc-sdk/srv/scheduling/i18n"
      ]
    },
    "websocket": {
      "kind": "ws",
      "[production]": {
        "adapter": {
          "local": true,
          "impl": "redis"
        }
      }
    },
    "eventQueue": {
      "useAsCAPOutbox": true,
      "periodicEvents": {
        "SchedulingJob/Sync": {
          "cron": "*/1 * * * *",
          "impl": "./node_modules/@cap-js-community/sap-afc-sdk/srv/scheduling/periodic/SchedulingJobSync.js"
        }
      }
    },
    "featureToggles": {
      "config": {
        "eventQueue/active": {
          "type": "boolean",
          "fallbackValue": true
        },
        "eventQueue/instanceLoadLimit": {
          "type": "number",
          "fallbackValue": 100
        }
      }
    },
    "requires": {
      "SchedulingProcessingService": {
        "outbox": {
          "kind": "persistent-outbox",
          "maxAttempts": 5,
          "checkForNextChunk": true,
          "parallelEventProcessing": 5
        }
      },
      "SchedulingWebsocketService": {
        "outbox": {
          "kind": "persistent-outbox",
          "transactionMode": "alwaysRollback",
          "maxAttempts": 5,
          "checkForNextChunk": true,
          "parallelEventProcessing": 5
        }
      },
      "sap-afc-sdk": {
        "model": "@cap-js-community/sap-afc-sdk",
        "endpoints": {
          "approuter": null,
          "server": null
        },
        "api": {
          "cors": true,
          "csp": true
        },
        "ui": {
          "path": "",
          "link": true,
          "swagger": true,
          "launchpad": true,
          "scheduling.monitoring.job": true
        },
        "broker": false,
        "[production]": {
          "broker": true
        },
        "mockProcessing": false,
        "[test]": {
          "mockProcessing": false
        },
        "[mock]": {
          "mockProcessing": {
            "min": 0,
            "max": 10,
            "default": "completed",
            "status": {
              "completed": 0.5,
              "completedWithWarning": 0.2,
              "completedWithError": 0.2,
              "failed": 0.1
            }
          }
        }
      },
      "afc": {
        "kind": "odata-v4",
        "model": "srv/external/afc",
        "[production]": {
          "credentials": {
            "destination": "SAP_AFC"
          }
        }
      },
      "auth": {
        "kind": "mocked-auth",
        "users": {
          "zeus": {
            "tenant": "t1",
            "roles": [
              "internal-user",
              "system-user"
            ]
          }
        }
      }
    }
  },
  "sapux": [
    "app/scheduling.monitoring.job"
  ]
}
